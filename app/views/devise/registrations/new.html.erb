<div class="jumbotron bg-faded">
  <div class="container text-center">
    <p class="display-4">
      Inscríbase con Plaza Chapina para recibir noticias de la campaña
      a través de corre-ele.
    </p>
  </div>
</div>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-sm-4">
      <h2><%= t('.sign_up') %></h2>

      <%= bootstrap_form_for(resource,
      as: resource_name,
      url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div class="field">
        <%= f.email_field :email, autofocus: true %>
      </div>

      <div class="field">
        <%= f.password_field :password, autocomplete: "off" %>
      </div>

      <div class="field">
        <%= f.password_field :password_confirmation, autocomplete: "off" %>
      </div>

      <div class="actions">
        <%= f.primary t('.sign_up'), class: "btn btn-primary btn-block" %>
      </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
